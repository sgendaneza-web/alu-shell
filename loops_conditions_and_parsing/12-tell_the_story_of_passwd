#!/usr/bin/env bash
# Read /etc/passwd 
while IFS=: read -r username password userid groupid comment home shell
do
	"$comment"  # intentionally unused, just for alignment
  echo "The user $username is part of the $groupid gang, lives in $home and rides $shell. ${userid}'s place is protected by the passcode $password, more info about the user here: $username"
done < /etc/passwd
